extends layout

block content
    .sty-signup 
        form(action="" method="POST").sty-form
            .form-group
                label(for="username") Username 
                input(type="text" name="username" required value= (undefined === user 
                ? '' 
                : user.username)) 
            .form-group
                label(for="password") Password 
                input(type="password" name = "password" required )
            button.sty-button Submit
        a(href="/signup").sty-link Don't have an account? Sign up
        if errors
            ul
                for error in errors
                    li!= error.msg
