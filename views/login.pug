extends layout

block content
    form(action="" method="POST").sty-signup 
        .form-group
            label(for="username") Username 
            input(type="text" name="username" required value= (undefined === user 
            ? '' 
            : user.username)) 
        .form-group
            label(for="password") Password 
            input(type="password" name = "password" required )
        button Submit
    if errors
        ul
            for error in errors
                li!= error.msg
