doctype html
html
  head
    title= title
    link(rel='stylesheet' href='/stylesheets/style.css')
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Noto+Sans&family=Titan+One&display=swap" rel="stylesheet")
  body
    .root
      .content
        nav 
          if (user)
            a(href="/chat").nav-logo.sty-logo Chatty
          else 
            a(href="/").nav-logo.sty-logo Chatty
          .nav-links 
            if (user)
              a(href=`/profile/${user.id}`).sty-link Profile 
              a(href="/logout").sty-link Logout
            else 
              a(href="/login").sty-link Login

        main 
          block content
        footer